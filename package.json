{
  "name": "kafka-topic-viewer",
  "version": "1.0.0",
  "description": "CLI program to visualize a Kafka Topic",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "b@turbulent.ca",
  "license": "Apache-2.0",
  "tags": [
    "typescript"
  ],
  "dependencies": {
    "@types/react": "^16.8.5",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.8.11",
    "commander": "^2.19.0",
    "faker": "^4.1.0",
    "fast-deep-equal": "^2.0.1",
    "kafka-node": "^2.6.1",
    "lodash.debounce": "^4.0.8",
    "marked": "^0.5.2",
    "pkg": "^4.3.7",
    "react": "^16.8.3",
    "react-blessed": "^0.3.0",
    "react-blessed-contrib": "^0.2.1",
    "react-devtools-core": "^3.6.0",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.8.0",
    "ws": "^6.1.4"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.10",
    "@types/faker": "^4.1.5",
    "@types/jest": "^23.3.14",
    "@types/kafka-node": "^2.0.7",
    "@types/node": "^10.12.27",
    "jest": "^23.1.0",
    "nodemon": "^1.18.10",
    "rimraf": "^2.6.3",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.1",
    "tslint": "^5.13.0",
    "typescript": "^2.9.1"
  },
  "bin": {
    "kafka-topic-viewer": "dist/index.js"
  },
  "pkg": {
    "assets": [
      "node_modules/blessed/usr/*"
    ]
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node -r tsconfig-paths/register src/index.ts"
  },
  "scripts": {
    "build": "rimraf dist && tsc --noUnusedLocals false",
    "build:exe:win": "pkg . --targets node10-win-x64 --output packages/ts-kafka-test",
    "build:exe:linux": "pkg . --targets node10-linux-x64 --output packages/ts-kafka-test",
    "package:win": "npm run build && npm run build:exe:win",
    "package:linux": "npm run build && npm run build:exe:linux",
    "format": "prettier --write \"**/*.ts\"",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --logHeapUsage --watch",
    "start:dev": "nodemon"
  }
}
